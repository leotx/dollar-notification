<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".DolarActivity"
    android:id="@+id/notificationDollar">

    <TextView android:text="@string/dollar_value" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblValueEntry"
        android:layout_above="@+id/txtEntryValue"
        android:layout_alignLeft="@+id/txtEntryValue"
        android:layout_alignStart="@+id/txtEntryValue" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtEntryValue"
        android:layout_above="@+id/btnNotification"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="157dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/dollar_actual_value"
        android:gravity="center"
        android:id="@+id/lblQuotation"
        android:layout_above="@+id/rGroupQuotationType"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btnRefresh" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activate_notification"
        android:id="@+id/btnNotification"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:gravity="center"
        android:id="@+id/lblCurrentDollarValue"
        android:paddingLeft="10dp"
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:layout_above="@+id/rGroupQuotationType"
        android:layout_toRightOf="@+id/lblQuotation"
        android:layout_toEndOf="@+id/lblQuotation"
        android:layout_alignTop="@+id/btnRefresh" />

    <Button android:id="@+id/btnRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/progress"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txtEntryValue"
        android:paddingLeft="15dp" />

    <RadioGroup
        android:id="@+id/rGroupQuotationType"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight=".07"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/lblValueEntry"
        android:layout_below="@+id/btnRefresh">

        <RadioButton
            android:id="@+id/rPercentage"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="@string/radio_percentage"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rValue"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="@string/radio_value"
            android:checked="false"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp" />
    </RadioGroup>

</RelativeLayout>
